<script type="text/javascript">
  <% if logged_in? %>
    window.currentUser = <%= render(
      'api/users/user.json.jbuilder',
      user: current_user
    ).html_safe %>
  <% end %>

  window.images = {
    openStableLogo: "<%= image_path("logo.png") %>",
    splashPhoto: "<%= image_path("dothraki.jpg") %>",
    restaurantPhoto: "<%= image_path("restaurant.jpg") %>",
    dothrakiBanner: "<%= image_path("dothraki-banner.jpg") %>"
  }

  window.US_STATES = <%= raw Restaurant::US_STATES %>
  window.PRICE_RANGES = <%= raw Restaurant::PRICE_RANGES.keys %>
  window.TIMES = <%= raw Restaurant::TIMES %>
  window.DAYS = <%= raw Restaurant::DAYS %>
  window.DINING_TIMES = <%= raw Restaurant::DINING_TIMES %>
  window.CATEGORIES = <%= raw Restaurant::CATEGORIES %>
  window.STRATEGIES = <%= raw Restaurant::STRATEGIES %>
  window.CITIES = <%= raw Restaurant::CITIES %>
</script>

<div id="root"></div>
